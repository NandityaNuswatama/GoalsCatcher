<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.GoalsCatcher" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorSecondary">@color/colorPrimaryLight</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetTheme</item>
    </style>

    <style name="Theme.GoalsCatcher" parent="Base.Theme.GoalsCatcher">

    </style>

    <style name="Theme.GoalsCatcher.NumberPicker">
        <item name="android:textSize">24sp</item>
        <item name="android:textAppearance">@style/TextBold</item>
    </style>

    <style name="Theme.GoalsCatcher.WhiteAccent" parent="Base.Theme.GoalsCatcher">
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="BottomSheetTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.16" parent="">
        <item name="cornerSize">16dp</item>
    </style>
</resources>